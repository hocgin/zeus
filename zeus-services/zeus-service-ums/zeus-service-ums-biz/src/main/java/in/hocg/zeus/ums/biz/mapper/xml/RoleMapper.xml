<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="in.hocg.zeus.ums.biz.mapper.RoleMapper">
  <select id="paging" resultType="in.hocg.zeus.ums.biz.entity.Role">
    SELECT ar.*
    FROM ams_role ar
    <where>
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (ar.title LIKE #{keyword})
      </if>
    </where>
  </select>

  <select id="complete" resultType="in.hocg.zeus.ums.biz.entity.Role">
    SELECT ar.*
    FROM ams_role ar
    <where>
      <if test="ro.keyword != null">
        <bind name="keyword" value="'%' + ro.keyword + '%'"/>
        AND (ar.remark LIKE #{keyword} OR ar.title LIKE #{keyword} OR ar.encoding LIKE #{keyword})
      </if>
    </where>
  </select>

  <select id="listByAuthorityId" resultType="in.hocg.zeus.ums.biz.entity.Role">
    SELECT ar.*
    FROM ams_role ar
           LEFT JOIN ams_role_authority_ref arar on ar.id = arar.role_id
    WHERE arar.authority_id = #{authorityId}
  </select>
</mapper>
